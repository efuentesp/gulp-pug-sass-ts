+sidebar
  span.bg-gray-300.block.p-3.font-bold.text-lg.mb-3 CONSULTA DE BANDA
  #filtros
    +form("criterios-busqueda", {})
      +field-date("fecha_valor",
        {
          label: "Fecha valor",
          orientation: "horizontal",
          size: "12em",
          required: true
        }
      )
      +field-select("operacion",
        {
          label: "Operaci√≥n",
          orientation: "horizontal",
          size: "12em",
          required: true
        },   
        {key: "ALL", value:"Todos"}
      )
      +field-select("Emisora_serie",
        {
          label: "emisora/serie",
          orientation: "horizontal",
          size: "12em",
          required:true 
        },   
        {key: "ALL", value:"Todos"}
        )
      +field-select("tipo_valor",
        {
          label: "Tipo Valor",
          orientation: "horizontal",
          size: "12em",
        },  
         {key: "ALL", value:"Todos"}
        )
