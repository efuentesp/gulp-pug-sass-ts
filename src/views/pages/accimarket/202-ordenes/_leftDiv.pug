include /mixins/mixins

.block.overflow-y-auto
  span.bg-gray-300.block.p-3.font-bold.text-lg.mb-3 CONSULTA DE BANDA
  #divFiltros
    +form("criteriosBusqueda", {})
      +field-date("fechaValor",
        {
          label: "Fecha valor",
          orientation: "horizontal",
          size: "10em",
          required: true,
          tooltip: "DD/MM/AAAA"
        }
      )
      +field-select("operacion",
        {
          label: "Operaci√≥n",
          orientation: "horizontal",
          size: "12em",
          required: true
        },
        {key: "ALL", value:"Todos"}
      )
      .amRow.flex.items-center
        +field-select("emisora",
          {
            label: "Emisora/serie",
            orientation: "horizontal",
            size: "12em",
            required:true
          },
          {key: "ALL", value:"Todos"}
          )
      +field-select("tipoValor",
        {
          label: "Tipo Valor",
          orientation: "horizontal",
          size: "12em",
          required:true
        },
          {key: "ALL", value:"Todos"}
        )
      +field-input("precioBanda",
        {
          label: "Precio Banda",
          orientation: "horizontal",
          disabled : true,
          size: "12em"
        })

      .amRow.mt-8.flex.justify-center
        +button-search({id: "consultarBanda", size: "large", disabled: false})

  .amRow#divTitulo
  span.bg-gray-300.block.p-3.bottom-80.font-bold.text-lg.mb-30 Filtros
  #divFiltros
    +form("criteriosFiltros", {})
      +field-plus-minus("contrato", {label: "Contrato", tooltip: "Contrato",  size: "14em"})
      +field-plus-minus("digito", {label: "Digito", tooltip: "Digito", size: "14em"})
      .amRow.mt-6.flex.justify-center
        +button-search({id: "consultarFiltros", size: "large", disabled: false})

  .amRow#divTitulo
  span.bg-gray-300.block.p-3.font-bold.text-lg.mb-3 Datos por aplicar
  #divFiltros
    +form("criteriosDatos", {})
      +field-input("titulos",
        {
          label: "Titulos",
          orientation: "horizontal",
          size: "12em",
          required: true
        }
      )
      +field-input("precioPactado",
        {
          label: "Precio Pactado",
          orientation: "horizontal",
          size: "12em",
          required: true
        }
      )
      +field-input("monto",
        {
          label: "Monto  ",
          orientation: "horizontal",
          disabled : true,
          size: "12em",
          type: "currency"
        })
      .amRow.my-16.flex.justify-center
        +field-group("botonesGroupMd")
          +button-add({size:"large", disabled: false})
          +button-clean({size: "large", disabled: false})
      
      
