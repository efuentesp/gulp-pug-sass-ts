extends ../../layouts/html5

block title
   title Form Validation

block styles
   link(rel="stylesheet" href="/assets/css/main.css")

block content
  .container#form-validation
    .callout.callout-warning(hidden)
      h4 Invalid Form
      p Erros was found!

    .callout.callout-info(hidden)
      h4 Valid Form
      p Everything seems ok!

    form#new-customer(data-parsley-validate="")
      +field-input("id", {label: "ID", required: true})
      +field-input("name", {label: "Name", required: true})
      +field-email("email", {label: "E-mail"})
      +field-options("banco",
                    {required: true},
                    {key: "P", value:"Person"}, {key:"C", value:"Company"})
      +field-input("description", {label: "Description"})
      +field-checks("products",
            {
              label: "Product Type",
              required: true
            },
            {key: "P01", value:"Product 1", color:"#fff"},
            {key: "P02", value:"Product 2", color:"#fff"},
            {key: "P03", value:"Product 3", color:"#fff"}
            )
      +field-select("payment",
                    {
                      label: "Payment method",
                      required: true,
                      size: "12em"
                    },
                    {key: "ET", value:"Electronic transfer"},
                    {key:"CHK", value:"Check"}
                    )
      button(type="submit" value="validate") Submit

block scripts
   script(src="/assets/scripts/common.js")
   script(src="/assets/scripts/accimarket/form-validation.js")