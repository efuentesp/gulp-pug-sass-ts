        +field-input("contrato",
            {
                label: "Contrato",
                size: "17.5em",
                orientation: "horizontal",
                required: true,
                max_length: "9",
                type: "alphanum",
                align: "left"
            })
        +field-input("digito",
        {
            size: "5em",
            orientation: "horizontal",
            type: "text",
            disabled: true,
            align: "center"
            })
