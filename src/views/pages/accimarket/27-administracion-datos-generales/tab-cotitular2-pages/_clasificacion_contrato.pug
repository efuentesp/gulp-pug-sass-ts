    +tab-item("conocimiento_experiencia")
        .row.flex.flex-wrap
            +quiz("encuesta2", {name: "Instrumento de Inversión", size: "40em"}, [
                {question: "Instrumentos de Deuda Gubernamental", required: true},
                {question: "Instrumentos de Deuda Corporativa", required: true},
                {question: "Sociedades de Inversión", required: true},
                {question: "Valores Estructurados", required: true},
                {question: "Certificados Bursátiles Fiduciarios(Cebures,Cedevis) y Fideicomisos Privados", required: true},
                {question: "Titulos Opcionales (Warrants)", required: true},
                {question: "Acciones", required: true},
                {question: "Valores Extranjeros", required: true},
                {question: "Trackers TRACs o ETFs", required: true},
                {question: "Certificados de Capital de Desarrollo (CKDs)", required: true}
                ], [
                    {answer: "No conoce ni ha invertido", type: "option"},
                    {answer: "Sólo conoce", type: "option"},
                    {answer: "Conoce y ha invertido", type: "option"}
                ])

    +tab-item("limitantes_invertir")
