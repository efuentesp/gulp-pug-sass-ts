extends ../../layouts/html5

block title
   title 01.Causión Bursátil

block styles
   link(rel="stylesheet" href="/assets/css/main.css")
   link(rel="stylesheet" href="/assets/css/accimarket/01-caucion-bursatil.css")

block content
   .container
      .row
         +accordion("criterios_busqueda_accordion")
            +accordion-item("criterios_busqueda_accordion_item")
               .row#criterios-busqueda
                  +field-date("date", "Fecha")
                  +field-plus-minus("contrato", "Contrato")
                  +field-plus-minus("digito", "Digito")
                  +field-options("banco",
                                 true,
                                 {key: "CB", value:"Casa de Bolsa"},
                                 {key:"B", value:"Banco"}
                  )
                  .column#botones-accion
                     +button-search("Sirve para buscar Contratos.")
                     +button-clean
                     +button-pdf
                     +button-xls

      .row#search-results-section
         +grid("contratos")

block scripts
   script(src="/assets/scripts/common.js")
   script(src="/assets/scripts/accimarket/01-caucion-bursatil.js")