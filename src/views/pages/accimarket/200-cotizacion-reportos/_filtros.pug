include /mixins/mixins

span.bg-gray-300.block.p-3.font-bold.text-lg.mb-3 DATOS PARA LA COTIZACION
#filtros
  +form("criterios-busqueda", {})
    +field-select("grupo",
      {
        label: "Grupo",
        orientation: "horizontal",
        size: "12em"
      },
      {}
    )
    +field-select("instrumento",
      {
        label: "Instrumento",
        orientation: "horizontal",
        size: "12em"
      },
      {}
    )
    +field-input("monto_invertir",
      {
        label: "Monto a invertir",
        orientation: "horizontal",
        tooltip: "Monto a invertir",
        size: "12em",
        max_length: "15"
      })
    +field-input("plazo",
      {
        label: "Plazo",
        orientation: "horizontal",
        tooltip: "Plazo",
        size: "12em",
        max_length: "3"
      })
    +field-date("fecha_banda",
      {
        label: "Fecha Banda",
        orientation: "horizontal",
        size: "10em",
        required: true
      })

    .row.mt-6.flex.justify-center
      +button-reset({size:"large", disabled: false})
      +button-search({size: "large", disabled: false})
      +button-clean({size: "large", disabled: false})
