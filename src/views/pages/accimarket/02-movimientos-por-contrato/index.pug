extends /layouts/html5

block title
   title 02. Movimientos por Contrato
   - var page = "02-movimientos-por-contrato"
   - var styles = "/assets/css/accimarket/" + page + "/styles.css"
   - var scripts = "/assets/scripts/accimarket/" + page +"/main.js"

block styles
  link(rel="stylesheet" href=styles)

block content
  .content.p-4
    +tab-group("movimientos_por_contrato_tab_group",
                {id: "tab_movimientos_por_contrato", label: "Movimientos por Contrato"},
                {id: "tab_reporte_agbc", label: "Reporte AGBC"},
                {id: "tab_cartas_masivas", label: "Cartas Masivas"})
      +tab-item("tab_movimientos_por_contrato")
        include _accordion
      +tab-item("tab_reporte_agbc")
        p Reporte AGBC
      +tab-item("tab_cartas_masivas")
        p Cartas Masivas
    .row.has_border.w-full.overflow-auto
      +grid("movimientos_contrato")

block scripts
   script(data-main=scripts src="/assets/scripts/require.js")