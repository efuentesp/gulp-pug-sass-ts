extends /layouts/html5

block title
  title Form Validation

block styles

block content
  .amContainer#formValidation
    .callout.calloutWarning(hidden)
      h4 Invalid Form
      p Erros was found!

    .callout.calloutInfo(hidden)
      h4 Valid Form
      p Everything seems ok!

    +form("newCustomer")
      .amFormGroup
        .amRow
          +field-input("id", {label: "ID", tooltip: "Tooltip ID", required: true, max_length: "6"})
          +field-input("nombreUno", {label: "Nombre"})
          +field-input("nombreDos", {label: "Nombre", required: true, orientation: "horizontal"})
          +field-input("nombreTres", {label: "Nombre", orientation: "horizontal"})
        .amRow
          +field-email("emailUno", {label: "E-mail", required: true})
          +field-email("emailDos", {label: "E-mail", required: true, orientation: "horizontal"})
        .amRow
          +field-date("fechaUno", {label: "Fecha"})
          +field-date("fechaDos", {label: "Fecha", required: true})
          +field-date("fechaTres", {label: "Fecha", orientation: "horizontal"})
          +field-date("fechaCuatro", {label: "Fecha", orientation: "horizontal", required: true})
        .amRow
          +field-plus-minus("contratoPlusMinusUno", {label: "Contrato"})
          +field-plus-minus("contratoPlusMinusDos", {label: "Contrato", required: true})
          +field-plus-minus("contratoPlusMinusTres", {label: "Contrato", orientation: "horizontal"})
          +field-plus-minus("contratoPlusMinusCuatro", {label: "Contrato", orientation: "horizontal", required: true})
        .amRow
          +field-select-plus-minus("contratoSelectPlusMinusUno", {label: "Contrato", size: "10em"},
                          {key: "", value:""},
                          {key: "C001", value:"Contrato 01"},
                          {key: "C002", value:"Contrato 02"},
                          {key: "C003", value:"Contrato 03"},
                          {key: "C004", value:"Contrato 04"},
                          {key: "C005", value:"Contrato 05"}
          )
          +field-select-plus-minus("contratoSelectPlusMinusDos", {label: "Contrato", size: "10em", required: true},
                          {key: "", value:""},
                          {key: "C001", value:"Contrato 01"},
                          {key: "C002", value:"Contrato 02"},
                          {key: "C003", value:"Contrato 03"},
                          {key: "C004", value:"Contrato 04"},
                          {key: "C005", value:"Contrato 05"}
          )
          +field-select-plus-minus("contratoSelectPlusMinusTres", {label: "Contrato", size: "10em", orientation: "horizontal"},
                          {key: "", value:""},
                          {key: "C001", value:"Contrato 01"},
                          {key: "C002", value:"Contrato 02"},
                          {key: "C003", value:"Contrato 03"},
                          {key: "C004", value:"Contrato 04"},
                          {key: "C005", value:"Contrato 05"}
          )
          +field-select-plus-minus("contratoSelectPlusMinusCuatro", {label: "Contrato", size: "20em", orientation: "horizontal", required: true},
                          {key: "", value:""},
                          {key: "C001", value:"Contrato 01"},
                          {key: "C002", value:"Contrato 02"},
                          {key: "C003", value:"Contrato 03"},
                          {key: "C004", value:"Contrato 04"},
                          {key: "C005", value:"Contrato 05"}
          )
        .amRow
          +field-options("bancoUno",
            {label: "Tipo de Persona", required: true},
            {key: "P", value:"Persona Moral"}, {key:"C", value:"Persona Física"}
          )
          +field-options("bancoDos",
            {label: "Tipo de Persona", required: true, orientation: "horizontal"},
            {key: "P", value:"Persona Moral"}, {key:"C", value:"Persona Física"}
          )
        .amRow
          +field-input("descriptionUno", {label: "Description"})
          +field-input("descriptionDos", {label: "Description", orientation: "horizontal"})
        .amRow
          +field-checks("productsUno",
            {
              label: "Product Type",
              required: true
            },
            {key: "P01", value:"Product 1"},
            {key: "P02", value:"Product 2"},
            {key: "P03", value:"Product 3"}
          )

          +field-checks("productsDos",
            {orientation: "horizontal"},
            {key: "P01", value:"Product 1", color: "red"},
            {key: "P02", value:"Product 2", color: "yellow"},
            {key: "P03", value:"Product 3", color: "green"}
          )
          +field-checks("productsTres",
            {
              label: "Product Type",
              required: true,
              orientation: "horizontal"
            },
            {key: "P01", value:"Product 1"},
            {key: "P02", value:"Product 2"},
            {key: "P03", value:"Product 3"}
          )
          +field-checks("productsCuatro",
            {
              label: "Product Type",
              orientation: "horizontal"
            },
            {key: "P01", value:"Product 1"},
            {key: "P02", value:"Product 2"},
            {key: "P03", value:"Product 3"}
          )
        .amRow
          +field-checks("servicioInversionUno",
            {
                label: "Servicio de Inversión",
            },
            {key: "S01", value:"Aplicados", color:"green"},
            {key: "S02", value:"Cancelados", color:"red"},
            {key: "S03", value:"Pendientes", color:"orange"},
            {key: "S04", value:"En Revisión", color:"blue"},
            {key: "S05", value:"En Proceso", color:"grey"},
            {key: "S06", value:"En Revisión Sans", color:"cyan"}
            )
          +field-checks("servicioInversionDos",
            {
                label: "Servicio de Inversión",
            },
            {key: "S01", value:"Asignadas", color:"green"},
            {key: "S02", value:"Cancelados", color:"red"},
            {key: "S03", value:"Pendientes", color:"orange"},
            {key: "S04", value:"En Revisión", color:"blue"},
            {key: "S05", value:"En Proceso", color:"grey"},
            {key: "S06", value:"En Revisión Sans", color:"cyan"}
            )
        .amRow
          +field-select("paymentUno",
            {
              label: "Método de pago",
              size: "12em"
            },
            {key: "ET", value:"Electronic transfer"},
            {key:"CHK", value:"Check"}
          )
          +field-select("paymentDos",
            {
              label: "Payment method",
              required: true,
              size: "12em"
            },
            {key: "ET", value:"Electronic transfer"},
            {key:"CHK", value:"Check"}
          )
          +field-select("paymentTres",
            {
              label: "Payment method",
              required: true,
              size: "12em",
              orientation: "horizontal"
            },
            {key: "ET", value:"Electronic transfer"},
            {key:"CHK", value:"Check"}
          )
        .amRow
          +field-input("amount", {label: "Amount", required: true, type: "digits"})
        .amRow
          +field-fileupload("adjuntarArchivo",
            {
              label: "Adjuntar Archivo",
              required: true
            }
          )
        .amRow
          +field-search("buscar", {})
        .amRow
          +field-multiselect("multi",
            {
              label: "Multiselect",
              required: true,
              size: "12em",
              orientation: "horizontal"
            },
            {key: "O1", value: "Opción 1"},
            {key: "O2", value: "Opción 2"},
            {key: "O3", value: "Opción 3"},
            {key: "O4", value: "Opción 4"},
            {key: "O5", value: "Opción 5"},
            {key: "O6", value: "Opción 6"},
            {key: "O7", value: "Opción 7"},
            {key: "O8", value: "Opción 8"}
          )
        .amRow
          +button-send({size: "large", disabled: false})

block scripts
  script(src="../../assets/scripts/accimarket/form-validation/scripts.js")