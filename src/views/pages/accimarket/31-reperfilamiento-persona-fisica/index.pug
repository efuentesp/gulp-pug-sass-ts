extends /layouts/html5

block title
    title Reperfilamiento de Personas Fisicas

block styles
    link(rel="stylesheet" href="../../assets/css/accimarket/31-reperfilamiento-persona-fisica/styles.css")

block content
    .content.p-4
        +accordion("reperfilamiento-pf")
            +accordion-item("reperfilamiento-pf-item", "Perfilamiento de Personas Fisicas")
                +form("#criterios-busqueda")
                    include _grupo1
                    +field-group("grupoTodo")
                        include _liquidaciones
                        include _grupo2
                        include _grupo3
                        include _grupo4
                        include _grupo5
                        include _grupo6
                    .row#sticky-action-bar
                        +button-send({size: "large", disabled: false})
                    +field-group("grupoAsesor")
                        include asesorInversion/_asesorInversion

        include dialogos/_dialogPF
block scripts
    script(src="../../assets/scripts/accimarket/31-reperfilamiento-persona-fisica/scripts.js")
    script(src="../../assets/scripts/accimarket/31-reperfilamiento-persona-fisica/selectOptions.js")
    script(src="../../assets/scripts/accimarket/31-reperfilamiento-persona-fisica/scriptsOperacion.js")