mixin field-date(id, parms)
  - var _field_id = "divField" + id
  - var _input_id = id
  - var _btn_id = "btn" + id
  - var _class = "amIs" + (parms.orientation ? parms.orientation[0].toUpperCase() + parms.orientation.substr(1) : "Vertical")
  - var _style = "width: " + (parms.size ? parms.size : "8em") + ";"
  - var _input_max_length = (parms.max_length ? parms.max_length : "32")
  - var _input_max_length_errmsg = "Solo puedes ingresar hasta " + _input_max_length + " caracteres."
  - var _field_error_block = "divFieldErrorBlock" + id
  - var _field_error_block_id = "#" + _field_error_block
  - var _datepicker_class = (parms.datepicker_range ? "amDatepickerRange" : "amDatepicker")
  - var _btn_clear =  parms.clear ? parms.clear : false
  - var _tooltip = (parms.tooltip ? parms.tooltip : "")

  .amField(id=_field_id class=_class)
    .amFieldLabel.flex
      label(for=_input_id)= parms.label
        if parms.required
          span.pr-3.amRequired *
        else
          span.pr-3
    .amFieldControl(data-tooltip=_tooltip)
      .amFieldInput.flex.amItemsCenter
        input.amInput(id=_input_id
          class=_datepicker_class
          required=parms.required
          style=_style
          disabled=parms.disabled
          readonly
          data-parsley-errors-container=_field_error_block_id
        )
        if _btn_clear
          input.pl-1(type="image" id="imgClear" +_input_id src="../../assets/images/meddelete.png"  style="width:15px;height:15px;")
        span.amFieldError.flex
          .amErrorTip
          .amErrorMsg(id=_field_error_block)