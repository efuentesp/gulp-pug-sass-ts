mixin field-plus-minus(id, parms)
  - var _field_id = "field_" + id
  - var _input_id = id
  - var _class = "is_" + (parms.orientation ? parms.orientation : "vertical")
  - var _style = "width: " + (parms.size ? parms.size : "8em") + ";"
  - var _input_max_size = "32"
  - var _input_max_size_errmsg = "You can enter only " + _input_max_size + " characters."  
  - var btn_plus_id = "btn_plus_" + id
  - var btn_minus_id = "btn_minus_" + id
  - var tag_list_id = "tag_list_" + id
  - var _field_error_block = "field_error_block_" + id
  - var _field_error_block_id = "#" + _field_error_block

  .field(id=_field_id class=_class)
    .field-label.flex
      label(for=_input_id)= parms.label
      if parms.required
        span.required *
    .field-control
      .field-plus-minus.has-addons
        input.input(type="text"
                    id=_input_id
                    required=parms.required
                    style=_style
                    disabled=parms.disabled
                    data-parsley-trigger="keyup"
                    data-parsley-maxlength=_input_max_size
                    data-parsley-maxlength-message=_input_max_size_errmsg
                    data-parsley-validation-threshold="10"
                    data-parsley-errors-container=_field_error_block_id
                    )
        button.button.is-icon.is-green(id=btn_plus_id type="button")
          i.fa.fa-plus-circle.fa-lg.icon-button
        button.button.is-icon.is-red(id=btn_minus_id type="button")
          i.fa.fa-minus-circle.fa-lg.icon-button
      .field-error
        div(id=_field_error_block)
      ul.tag-list(id=tag_list_id
                  style=_style
                  )