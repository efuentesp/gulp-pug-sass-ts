mixin field-plus-minus(id, parms)
  - var _uppc_id = "div" + id[0].toUpperCase() + id.substr(1)
  - var _field_id = "divField" + _uppc_id
  - var _input_id = "txt" + _uppc_id
  - var _input_id_h = "txt" + _uppc_id + "Hidden"
  - var _class = "amIs" + (parms.orientation ? parms.orientation[0].toUpperCase() + parms.orientation.substr(1) : "Vertical")
  - var _style = "width: " + (parms.size ? parms.size : "8em") + ";"
  - var _input_max_size = "32"
  - var _input_max_size_errmsg = "You can enter only " + _input_max_size + " characters."  
  - var btn_plus_id = "btnPlus" + _uppc_id
  - var btn_minus_id = "btnMinus" + _uppc_id
  - var tag_list_id = "lstTagList" + _uppc_id
  - var _field_error_block = "divFieldErrorBlock" + _uppc_id
  - var _field_error_block_id = "#" + _field_error_block
  - var _tooltip = (parms.tooltip ? parms.tooltip : "")

  .amField(id=_field_id class=_class)
    .amFieldLabel.flex
      label(for=_input_id)= parms.label
      if parms.required
        span.amRequired *
    .amFieldControl
      .amFieldPlusMinus.amHasAddons.flex(data-tooltip=_tooltip)
        input.amInput(type="text"
                    id=_input_id
                    required=parms.required
                    style=_style
                    disabled=parms.disabled
                    data-parsley-trigger="keyup"
                    data-parsley-maxlength=_input_max_size
                    data-parsley-maxlength-message=_input_max_size_errmsg
                    data-parsley-validation-threshold="10"
                    data-parsley-errors-container=_field_error_block_id
                    )
        input.amInput(type="hidden"
          id=_input_id_h
          )
        button.amButtonNoborder(id=btn_plus_id type="button")
          img.amPlusIcon(src="../../assets/images/plus-icon.png")
        button.amButtonNoborder(id=btn_minus_id type="button")
          img.amMinusIcon(src="../../assets/images/minus-icon.png")
      span.amFieldError.flex
        .amErrorTip
        .amErrorMsg(id=_field_error_block)
      ul.amTagList(id=tag_list_id
                  style=_style
                  )