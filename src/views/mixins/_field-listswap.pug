mixin field-swaplist(id, params)
  - var _id = id
  - var _id_source = id + "_source"
  - var _id_destination = id + "_destination"

  .listswap_wrapper(id=id)
    .row
      div(id="swaplist")
        div(id="swaplist-source")
          p.title= params.title_source
          ul.column.source(id=_id_source)
        .source_control
          .up
            button.up-button
              img(src="../../assets/images/flecha_arriba2.png" style="width:18px;")
          .add
            button.right-button
              img(src="../../assets/images/flecha_derecha2.png" style="width:18px;")
          .remove
            button.left-button
              img(src="../../assets/images/flecha_izquierda2.png" style="width:18px;")
          .down
            button.down-button
              img(src="../../assets/images/flecha_abajo2.png" style="width:18px;")
        div(id="swaplist-destination")
          p.title= params.title_source
          ul.column.destination(id=_id_destination)              
      .row
         div(id="swaplist-buttons")
          +button-accept
          +button-cancel
    
    