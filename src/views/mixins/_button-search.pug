mixin button-search(parms)
  - var _parms = parms ? parms : {size: "large", disabled: false, tooltip: ""}
  - var _label = (parms.label ? parms.label : "Consultar")
  - var _id = (parms.id ? parms.id : "btn_search")

  if _parms.size == "large"
    button.button.big-button(id=_id type="submit" title=_parms.tooltip disabled=_parms.disabled value="validate")
      img(src="../../assets/images/btn-consultar_32x32.png")
      span=_label

  if _parms.size == "medium"
    button.button.medium-button(id=_id title=_parms.tooltip disabled=_parms.disabled)
      span.fa-stack.fa-2x
        i.fa.fa-search.fa-sm

  if _parms.size == "small"
    button.button.small-button(id=_id title=_parms.tooltip disabled=_parms.disabled)
      span.fa-stack.fa-sm
        i.fa.fa-search.fa-lg
