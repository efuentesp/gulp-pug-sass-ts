mixin field-email(id, parms)
  - var _field_id = "field_" + id
  - var input_id = "input_" + id
  - var _class = "is_" + (parms.orientation ? parms.orientation : "vertical")
  - var size_class = "is-" + (parms.size ? parms.size : "vertical")
  - var _class = (_class == "is_horizontal" ? _class + " items-center" : _class)
  - var _tooltip = (parms.tooltip ? parms.tooltip : "")

  .field(id=_field_id class=_class)
    .field-label.flex
      label= parms.label
      if parms.required
        span.required *
      else
        span
    .field-control(data-tooltip=_tooltip)
      input.input(type="email" id=input_id class=size_class required=parms.required data-parsley-trigger="change")