mixin button-clean(parms)
  - var _parms = parms ? parms : {size: "large", disabled: false, tooltip: ""}
  - var _label = (parms.label ? parms.label : "Limpiar")

  if _parms.size == "large"
    button.button.big-button(id="btn_clean" type="reset" data-tooltip=_parms.tooltip data-title=_label disabled=_parms.disabled)
        img(src="../../assets/images/btn-limpiar_32x32.png")
        span=_label

  if _parms.size == "medium"
    button.button.medium-button(id="btn_clean" title=_label data-tooltip=_parms.tooltip disabled=_parms.disabled)
        img(src="../../assets/images/btn-limpiar_32x32.png")

  if _parms.size == "small"
    button.button.small-button(id="btn_clean" title=_label data-tooltip=_parms.tooltip disabled=_parms.disabled)
        img(src="../../assets/images/btn-limpiar_32x32.png")
