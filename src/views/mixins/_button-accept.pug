mixin button-accept(parms)
  - var _parms = parms ? parms : {size: "large", disabled: false, tooltip: ""}

  if _parms.size == "large"
    button.button.big-button(id="btn_cancel" type="reset" data-tooltip=_parms.tooltip disabled=_parms.disabled)
      img(src="../../assets/images/btn-aceptar.png")
      span Aceptar

  if _parms.size == "medium"
    button.button.medium-button.flex.items-center(id="btn_cancel" data-tooltip=_parms.tooltip disabled=_parms.disabled)
      img(src="../../assets/images/btn-aceptar.png")
      span Aceptar

  if _parms.size == "small"
    button.button.small-button(id="btn_cancel" data-tooltip=_parms.tooltip disabled=_parms.disabled)
      img(src="../../assets/images/btn-aceptar.png")
