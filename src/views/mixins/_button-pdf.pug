mixin button-pdf(parms)
  - var _parms = parms ? parms : {size: "large", disabled: false, tooltip: ""}
  - var _label = (parms.label ? parms.label : "PDF")
  - var _id = (parms.id ? parms.id : "btnPdf")

  if _parms.size == "large"
    button.amButton.amBigButton(id=_id data-tooltip=_parms.tooltip disabled=_parms.disabled)
      img(src="../../assets/images/btn-pdf_32x32.png")
      span=_label

  if _parms.size == "medium"
    button.amButton.amMediumButton.flex.items-center(id=_id data-tooltip=_parms.tooltip disabled=_parms.disabled)
      img(src="../../assets/images/btn-pdf_32x32.png")
      span=_label

  if _parms.size == "small"
    button.amButton.amSmallButton(id=_id data-tooltip=_parms.tooltip disabled=_parms.disabled)
      img(src="../../assets/images/btn-pdf_32x32.png")
