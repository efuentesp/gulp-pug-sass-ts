mixin button-filter-clean(parms)
  - var _parms = parms ? parms : {size: "large", disabled: false, tooltip: ""}

  if _parms.size == "large"
    button.amButton.amBigButton(id="btnClean" type="reset" data-tooltip=_parms.tooltip disabled=_parms.disabled)
      img(src="../../assets/images/btn-filter-clean.png")
      span Limpiar

  if _parms.size == "medium"
    button.amButton.amMediumButton.flex.items-center(id="btnClean" data-tooltip=_parms.tooltip disabled=_parms.disabled)
      img(src="../../assets/images/btn-filter-clean.png")
      span Limpiar

  if _parms.size == "small"
    button.amButton.amSmallButton(id="btnClean" data-tooltip=_parms.tooltip disabled=_parms.disabled)
      img(src="../../assets/images/btn-filter-clean.png")
