mixin button-reset(parms)
  - var _parms = parms ? parms : {size: "large", disabled: false, tooltip: ""}

  if _parms.size == "large"
    button.amButton.amBigButton(id="btnReset" type="submit" data-tooltip=_parms.tooltip disabled=_parms.disabled value="validate")
      img(src="../../assets/images/btn-reiniciar.png")
      span Reiniciar

  if _parms.size == "medium"
    button.amButton.amMediumButton.flex.items-center(id="btnReset" data-tooltip=_parms.tooltip disabled=_parms.disabled)
      img(src="../../assets/images/btn-reiniciar.png")
      span Reiniciar

  if _parms.size == "small"
    button.amButton.amSmallButton(id="btnReset" data-tooltip=_parms.tooltip disabled=_parms.disabled)
      img(src="../../assets/images/btn-reiniciar.png")
