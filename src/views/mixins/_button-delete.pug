mixin button-delete(parms)
  - var _parms = parms ? parms : {size: "large", disabled: false, tooltip: ""}

  if _parms.size == "large"
    button.amButton.amBigButton(id="btnDelete" type="submit" data-tooltip=_parms.tooltip disabled=_parms.disabled value="validate")
      img(src="../../assets/images/btn-borrar.png")
      span Borrar

  if _parms.size == "medium"
    button.amButton.amMediumButton.flex.items-center(id="btnDelete" data-tooltip=_parms.tooltip disabled=_parms.disabled)
      img(src="../../assets/images/btn-borrar.png")
      span Borrar

  if _parms.size == "small"
    button.amButton.amSmallButton(id="btnDelete" data-tooltip=_parms.tooltip disabled=_parms.disabled)
      img(src="../../assets/images/btn-borrar.png")
