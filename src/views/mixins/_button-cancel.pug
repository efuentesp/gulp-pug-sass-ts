mixin button-cancel(parms)
  - var _parms = parms ? parms : {size: "large", disabled: false, tooltip: ""}

  if _parms.size == "large"
    button.amButton.amBigButton(id="btnCancel" type="reset" data-tooltip=_parms.tooltip disabled=_parms.disabled)
      img(src="../../assets/images/btn-cancelar.png")
      span Cancelar

  if _parms.size == "medium"
    button.amButton.amMediumButton.flex.items-center(id="btnCancel" data-tooltip=_parms.tooltip disabled=_parms.disabled)
      img(src="../../assets/images/btn-cancelar.png")
      span Cancelar

  if _parms.size == "small"
    button.amButton.amSmallButton(id="btnCancel" data-tooltip=_parms.tooltip disabled=_parms.disabled)
      img(src="../../assets/images/btn-cancelar.png")
