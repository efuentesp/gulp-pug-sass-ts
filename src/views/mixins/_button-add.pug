mixin button-add(parms)
  - var _parms = parms ? parms : {size: "large", disabled: false, tooltip: ""}

  if _parms.size == "large"
    button.amButton.amBigButton(id="btnAdd" type="submit" data-tooltip=_parms.tooltip disabled=_parms.disabled value="validate")
      img(src="../../assets/images/btn-agregar.png")
      span Agregar

  if _parms.size == "medium"
    button.amButton.amMediumButton.flex.items-center(id="btnAdd" data-tooltip=_parms.tooltip disabled=_parms.disabled)
      img(src="../../assets/images/btn-agregar.png")
      span Agregar

  if _parms.size == "small"
    button.amButton.amSmallButton(id="btnAdd" data-tooltip=_parms.tooltip disabled=_parms.disabled)
      img(src="../../assets/images/btn-agregar.png")
