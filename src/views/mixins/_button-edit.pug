mixin button-edit(parms)
  - var _parms = parms ? parms : {size: "large", disabled: false, tooltip: ""}
  - var _label = (parms.label ? parms.label : "Editar")

  if _parms.size == "large"
    button.amButton.amBigButton(id="btnEdit" data-tooltip=_parms.tooltip disabled=_parms.disabled)
      span.fa-stack.fa-lg
        i.fas.fa-edit.fa-2x
      br
      span= _label

  if _parms.size == "medium"
    button.amButton.amMediumButton.flex.items-center(id="btnEdit" data-tooltip=_parms.tooltip disabled=_parms.disabled)
      span.fa-stack.fa-2x
        i.fas.fa-edit.fa-sm
      span= _label

  if _parms.size == "small"
    button.amButton.amSmallButton(id="btnEdit" data-tooltip=_parms.tooltip disabled=_parms.disabled)
        span.fa-stack.fa-sm
          i.fas.fa-edit.fa-lg