mixin button-send(parms)
  - var _parms = parms ? parms : {size: "large", disabled: false, tooltip: ""}
  - var _label = (parms.label ? parms.label : "Enviar")

  if _parms.size == "large"
    button.amButton.amBigButton(id="btnSend" data-tooltip=_parms.tooltip disabled=_parms.disabled)
      img(src="../../assets/images/btn-enviar.png")
      span=_label

  if _parms.size == "medium"
    button.amButton.amMediumButton.flex.items-center(id="btnSend" data-tooltip=_parms.tooltip disabled=_parms.disabled)
      img(src="../../assets/images/btn-enviar.png")
      span=_label

  if _parms.size == "small"
    button.amButton.amSmallButton(id="btnSend" data-tooltip=_parms.tooltip disabled=_parms.disabled)
      img(src="../../assets/images/btn-enviar.png")