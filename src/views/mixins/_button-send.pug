mixin button-send(parms)
  - var _parms = parms ? parms : {size: "large", disabled: false, tooltip: ""}
  - var _label = (parms.label ? parms.label : "Enviar")

  if _parms.size == "large"
    button.button.big-button(id="btn_send" data-tooltip=_parms.tooltip disabled=_parms.disabled)
      img(src="../../assets/images/btn-enviar.png")
      span=_label

  if _parms.size == "medium"
    button.button.medium-button(id="btn_send" data-tooltip=_parms.tooltip disabled=_parms.disabled)
      img(src="../../assets/images/btn-enviar.png")

  if _parms.size == "small"
    button.button.small-button(id="btn_send" data-tooltip=_parms.tooltip disabled=_parms.disabled)
      img(src="../../assets/images/btn-enviar.png")